# Copy to .env and fill in secrets locally. Do NOT commit .env.

# Providers and models
STT_PROVIDER=hf
MT_PROVIDER=openai
TTS_PROVIDER=hf

STT_MODEL=openai/whisper-small
MT_MODEL=facebook/nllb-200-distilled-600M
TTS_MODEL=espnet/kan-bayashi-ljspeech

# Optional provider endpoints
# STT_ENDPOINT=
# MT_ENDPOINT=
# TTS_ENDPOINT=

# API tokens (leave empty here; set only in local .env)
# HF_API_TOKEN=
# OPENAI_API_KEY=
# OPENAI_BASE_URL=
# ELEVENLABS_API_KEY=

# Execution
FFMPEG_BIN=ffmpeg
TMP_DIR=.ai_loca_tmp
HTTP_TIMEOUT=60
HTTP_RETRIES=3

# Optional: OpenAI TTS model
# TTS_MODEL_OPENAI=gpt-4o-mini-tts
